<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_header"
    android:layout_width="fill_parent"
    android:layout_height="171dp"
    android:minHeight="171dp"
    android:background="@color/primary_light"
    android:clickable="false"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <com.github.callanna.metarialframe.view.RoundedImageView
        android:id="@+id/user_pic"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/account_header_drawer_name"
        android:layout_toStartOf="@+id/account_header_drawer_name"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />
    <TextView
        android:id="@+id/account_header_drawer_name"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:text="Callanna"
        android:layout_alignTop="@+id/user_pic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/account_header_drawer_email"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:singleLine="true"
        android:textSize="14sp"
        android:text="I am sheep ,everyday happy fish"
        android:layout_alignBottom="@+id/user_pic"
        android:layout_alignLeft="@+id/account_header_drawer_name"
        android:layout_alignStart="@+id/account_header_drawer_name" />
</RelativeLayout>